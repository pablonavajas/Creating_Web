body {
 font-family: Verdana; 
 color: DarkSlateGrey;
}

img {
  width: 100%;
}

h1 {
  font-size: 300%;
}
h1,h2 {
  color: Red;
  text-transform: uppercase;
  font-weight: 100;
}

footer {
  margin-top: 70px;
  background-color: Red;
  color: White;
  text-align: center;
  padding-top: 15px;
  padding-bottom: 15px;
}

#container {
  width:60%;
  margin:auto;
}

@media screen and (max-width:768px){
  #container {
    width:90%;
  }
  
  h1 {
    font-size: 200%;
  }
}
